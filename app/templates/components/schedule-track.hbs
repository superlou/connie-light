{{#each hours as |hour|}}
  {{grid-block hourWidth=hourWidth type='major' hour=hour
    addEvent='addEvent'
    }}
  {{grid-block hourWidth=hourWidth type='minor' hour=hour offset=30
    addEvent='addEvent'
    }}
{{/each}}


{{#each reservationsWrapper as |wrapper|}}
  {{reservation-block reservation=wrapper.model
                      isSelected=wrapper.isSelected
                      hourWidth=hourWidth
                      trackStart=start
                      resizeReservation='resizeReservation'
                      select='select'
                      editDetails='editDetails'}}
{{/each}}
