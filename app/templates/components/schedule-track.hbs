{{#each hours as |hour|}}
  {{grid-block hourWidth=hourWidth type='major' hour=hour
    selectEvent='selectEvent'
    }}
  {{grid-block hourWidth=hourWidth type='minor' hour=hour offset=30
    selectEvent='selectEvent'
    }}
{{/each}}


{{#each reservations as |reservation|}}
  {{reservation-block reservation=reservation hourWidth=hourWidth
    trackStart=start resizeReservation='resizeReservation'}}
{{/each}}
